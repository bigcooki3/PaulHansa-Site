{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "NPM Build",
      "detail": "vue-cli-service build",
      "type": "npm",
      "script": "build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$tsc",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "NPM Serve",
      "detail": "vue-cli-service serve",
      "type": "npm",
      "script": "serve",
      "problemMatcher": "$tsc",
    },
    {
      "label": "Git merge dev into master",
      "detail": "git fetch origin dev:master; git push origin master:master",
      "type": "shell",
      "problemMatcher": [],
      "command": "git fetch origin dev:master; git push origin master:master"
    },
    {
      "label": "NPM Serve Production Build",
      "type": "shell",
      "command": "npm serve",
      "args": [
        "-s",
        "dist"
      ],
      "dependsOn": [
        "NPM Build"
      ],
      "problemMatcher": "$tsc",
    }
  ]
}